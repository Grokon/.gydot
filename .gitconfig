[user]
        name = Grok Yon
        email = grokyon@gmail.com

[github]
        user = Grokon

[core]
        autocrlf = input
        safecrlf = true
        editor = vim
        excludesfile = ~/.gitignore-global

[alias]
        st = status
        co = checkout
        ci = commit
        ca = commit --reset-author --amend
        unmodify = checkout --
        unstage = reset HEAD --
        br = branch
        last = log -1 --format=fuller HEAD
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
        type = cat-file -t
        dump = cat-file -p
        tag-list = tag -l -n1
        show-names = show --name-only

[merge]
        tool = vimdiff

[init]
        templatedir = ~/.git_templates

[color]
        ui = true
        diff = auto
        status = auto
        branch = auto

[credential]
        helper = cache --timeout=3600


[log]
        decorate = full

